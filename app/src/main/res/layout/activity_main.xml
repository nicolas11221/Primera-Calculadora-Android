<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/txt_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="Restar"
        android:text="Restar"
        app:layout_constraintEnd_toEndOf="@+id/txt_numero1"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero2" />

    <EditText
        android:id="@+id/txt_numero1"
        android:layout_width="327dp"
        android:layout_height="67dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Primer Valor"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_numero2"
        android:layout_width="313dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:ems="10"
        android:hint="Segundo Valor"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero1" />

    <Button
        android:id="@+id/txt_boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="Sumar"
        android:text="Sumar"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero2"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/txt_resultado"
        android:layout_width="157dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:text="Resultado"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiplicar"
        tools:layout_editor_absoluteX="127dp" />

    <Button
        android:id="@+id/btn_multiplicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:onClick="Multiplicar"
        android:text="Multiplicar"
        app:layout_constraintEnd_toEndOf="@+id/txt_numero1"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero2" />

    <Button
        android:id="@+id/btn_dividir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="Dividir"
        android:text="Dividir"
        app:layout_constraintTop_toBottomOf="@+id/txt_numero2"
        tools:layout_editor_absoluteX="39dp" />

</androidx.constraintlayout.widget.ConstraintLayout>